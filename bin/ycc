#!/usr/bin/env node

var argv = require('minimist')(process.argv.slice(2), { 
  alias: {
    include: 'I',
	link: 'L',
	output: 'o'
  }
});
var cwd = process.cwd()
var core = require('..')
  .set({ basedir: cwd })
  .include(cwd, argv.include)
  .link(cwd, argv.link)
  .compose(argv._)

core.dump(argv);
